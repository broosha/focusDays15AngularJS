<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Search form with AngualrJS</title>
    <link rel="stylesheet" href="Content/bootstrap.min.css" type="text/css" />
    <script src="./scripts/angular.js"></script>
    <script src="./scripts/angular-ui/ui-bootstrap.min.js"></script>
    <script src="./scripts/App.js"></script>
    <script src="./scripts/AzureSearchController.js"></script>

</head>
<body>
    <div ng-app="app">
        <div ng-controller="SearchController as search">
            <div class="container-fluid">
                <form name="search.searchForm" class="form-inline" ng-submit="search.submit()">
                    <label for="inputEmail">Search Terms:</label>
                    <input type="text" class="input-medium search-query" ng-minlength="3" ng-required="true" ng-model="search.keywords">
                    <label for="inputEmail">Abfrage nach:</label>
                    <div class="btn-group">
                        <label class="btn btn-primary" ng-model="search.type" btn-radio="'Application'">Application</label>
                        <label class="btn btn-primary" ng-model="search.type" btn-radio="'ITService'">IT-Service</label>
                        <label class="btn btn-primary" ng-model="search.type" btn-radio="'All'">Alle</label>
                    </div>
                    <input name="submit" class="submit btn btn-default" id="submit" style="display: inline-block;" type="submit" value="Search">
                </form>

                <div ng-repeat="result in search.results">
                		<h3>Number of Search Results:{{search.results.count}</h3>
                    <a class="h1" target="_new" href="{{result.URL}}">{{result.Name}}</a>
                    <div class="h6" ng-bind-html="result.Beschreibung">{{result.Beschreibung}}</div>
                    <div ng-bind-html="result.id_axa">{{result.id_axa}}</div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
